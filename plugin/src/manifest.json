{
	"name": "WebMD Scorch Plugin",
	"version": "0.1.2",
	"manifest_version": 3,
	"description": "WebMD Scorch Plugin",
	"background": {
		"service_worker": "service-worker.js"
	},
	"action": {
		"default_icon": {
			"16": "img/scorch-icon.png",
			"24": "img/scorch-icon.png",
			"32": "img/scorch-icon.png"
		},
		"default_title": "WebMD Scorch Plugin",
		"default_popup": "html/popup.html"
	},
	"icons": {
		"16": "img/scorch-icon.png",
		"128": "img/scorch-icon.png"
	},
	"permissions": [
		"activeTab",
		"tabs",
		"contextMenus",
		"notifications",
		"storage",
		"identity",
		"identity.email"
	],
	"host_permissions": [
		"https://scorchapi.portal.webmd.com/*"
	]
}